# ============================================
# Well Versed Application - Environment Variables Template
# ============================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env file to version control
# ============================================

# Environment (local, development, staging, production)
ENVIRONMENT=local

# ============================================
# Security & Authentication - REQUIRED
# ============================================
# JWT Secret for local development (min 32 chars)
# Generate with: openssl rand -hex 32
LOCAL_JWT_SECRET=CHANGE_ME_USE_GENERATED_SECRET_MIN_32_CHARS

# Test credentials for local development
LOCAL_TEST_USERS=test@example.com,admin@example.com
LOCAL_TEST_PASSWORD=CHANGE_ME_MIN_8_CHARS

# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=wellversed_db
DATABASE_USER=wellversed_user
DATABASE_PASSWORD=your_secure_password_here

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
LOG_LEVEL=INFO
FRONTEND_URL=http://localhost:4200
# Comma-separated list of allowed CORS origins (production only)
# ALLOWED_ORIGINS=https://wellversed.io,https://www.wellversed.io

# API Bible Configuration
API_BIBLE_KEY=your_api_bible_key_here
API_BIBLE_HOST=https://api.scripture.api.bible
DEFAULT_BIBLE_ID=de4e12af7f28f599-02

# ============================================
# AWS Configuration (Production/Staging)
# ============================================
AWS_REGION=us-east-1
COGNITO_USER_POOL_ID=us-east-1_xxxxxxxxx
COGNITO_CLIENT_ID=xxxxxxxxxxxxxxxxxxxxxxxxxx
# IMPORTANT: Client secret should ONLY be used on backend
COGNITO_CLIENT_SECRET=backend_only_do_not_expose_to_frontend
COGNITO_DOMAIN=https://your-domain.auth.us-east-1.amazoncognito.com
COGNITO_REDIRECT_URI=https://your-app.com/auth/callback
COGNITO_JWKS_URI=https://cognito-idp.us-east-1.amazonaws.com/your_pool_id/.well-known/jwks.json
COGNITO_ISSUER=https://cognito-idp.us-east-1.amazonaws.com/your_pool_id

# ============================================
# Redis Configuration (for rate limiting)
# ============================================
USE_REDIS=true
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_BLACKLIST_DB=1
REDIS_PASSWORD=

# ============================================
# Security & Audit
# ============================================
AUDIT_LOGGING=true
AUDIT_LOG_FILE=/var/log/wellversed/audit.log
AUDIT_LOG_PII=false

# ============================================
# Additional Services
# ============================================
MAPBOX_TOKEN=your_mapbox_token_here

# Optional monitoring services
DATADOG_API_KEY=
SENTRY_DSN=
SENDGRID_API_KEY=