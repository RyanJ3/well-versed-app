# ============================================
# direnv configuration for Well Versed
# ============================================
# Install direnv: https://direnv.net/
# Then run: direnv allow
# ============================================

# Load environment variables from .env.local if it exists
if [ -f .env.local ]; then
    dotenv .env.local
fi

# Or set them directly here (more secure than .env file)
export ENVIRONMENT="local"

# Database
export DATABASE_HOST="localhost"
export DATABASE_PORT="5432"
export DATABASE_NAME="wellversed_db"
export DATABASE_USER="wellversed_user"
# export DATABASE_PASSWORD=""  # Set in .env.local

# Security
# export LOCAL_JWT_SECRET=""  # Set in .env.local
export LOCAL_TEST_USERS="test@example.com,admin@example.com"
# export LOCAL_TEST_PASSWORD=""  # Set in .env.local

# API Configuration
export API_HOST="0.0.0.0"
export API_PORT="8000"
export FRONTEND_URL="http://localhost:4200"

# API Bible
# export API_BIBLE_KEY=""  # Set in .env.local
export API_BIBLE_HOST="https://api.scripture.api.bible"
export DEFAULT_BIBLE_ID="de4e12af7f28f599-02"

# Redis
export USE_REDIS="true"
export REDIS_HOST="redis"
export REDIS_PORT="6379"

# Audit
export AUDIT_LOGGING="true"
export AUDIT_LOG_FILE="/var/log/wellversed/audit.log"

# Add project bin to PATH
PATH_add bin
PATH_add scripts

# Show status when entering directory
echo "ðŸ“š Well Versed environment loaded (direnv)"
echo "   Run 'direnv allow' if you see a security warning"